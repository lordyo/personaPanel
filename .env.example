# Entity Simulation Framework environment variables
# Copy this file to .env and fill in your values

# API keys
OPENAI_API_KEY=your_openai_api_key_here

# Environment (development, production)
ENVIRONMENT=development

# Server settings
PORT=5001
HOST=0.0.0.0
FLASK_DEBUG=true  # Set to false in production

# Database configuration
# The database file will be stored in the data directory by default
# DB_PATH=custom_path_if_needed

# DSPy Configuration
DSPY_MODEL=gpt-4o-mini  # Default model for DSPy
# DSPY_CACHE_DIR=custom_cache_path  # Optional custom cache directory

# Flask configuration
# FLASK_ENV=development

# Database settings (default is SQLite)
# DATABASE_URI=sqlite:///data/entity_sim.db 